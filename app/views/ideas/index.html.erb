
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      <%= simple_form_for Idea.new do |f| %>
        <%= f.input :description %>
        <%= f.input :author %>
        
     
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit 'Submit', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>
</div>




<% @ideas.each do |idea| %>
    <div class="card">
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p class= "description"><%= idea.description %></p>
                <footer class="blockquote-footer">by <%= idea.author %></footer>
            </blockquote>
            <br>

            <div class="btn-group" role="group">
                <%= link_to 'Delete', idea_path(idea), method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure?"} %>
                <%= link_to 'Revise', edit_idea_path(idea), class: 'btn btn-sm btn-success' %>
            </div>
        </div>
    </div>
<% end %>

<div class="d-flex justify-content-center">
    <%= will_paginate @ideas %>
</div>